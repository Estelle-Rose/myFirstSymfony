{% extends 'base.html.twig' %}

{% block title %}Liste des animaux{% endblock %}
{% block pageTitle %}Voici la liste des animaux !{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 840px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code {  padding: 2px 6px; }
    .card,.btn {
        border-radius: 5px !important;
    }
</style>

<div class="example-wrapper">
   {% for animal in animals %}
    <div class="card border-success mb-3">
        <div class="row">
            <div class="col-md-4">
                <div class="card-body">
                    <img src="{{ asset('images/animaux/'~animal.image)}}" alt="">
                </div>
                
            </div>
            <div class="col-md-8">
                    <h3 class="card-header">{{animal.nom}}</h3>
                     <div class="card-body">
                        <p class="card-text">{{animal.description}}</p>
                        <p class="card-text">  Famille : 
                            <div class="row">
                                <div class="col">
                                    <a
                            href="{{ path('famille', { id: animal.famille.id }) }}"
                            class="btn btn-outline-info"
                            >{{ animal.famille.libelle }}.</a
                            >
                                </div>
                            </div>
                           
                            
                        </p>
                        <p class="card-text ">Zone géographique:</p>
                        <div class="row g-0 ">
                        {% for continent in animal.continents %}
                    
                            <div class="col-3">
                                <a href="{{path('continent', {'id': continent.id})}}" class="btn btn-outline-primary m-1">{{ continent.libelle}}</a>

                            </div>
                        
                            {% endfor %}
                        </div>
                        <p class="card-text ">Personnes possédant cet animal</p>
                        <div class="row g-0 ">
                        {% for dispose in animal.disposes %}
                    
                            <div class="col-3">
                                <a href="{{path('afficher_personne', {'id': dispose.personne.id})}}" class="btn btn-outline-primary m-1">{{ dispose.personne.nom}}</a>

                            </div>
                        
                            {% endfor %}
                        </div>
                    </div>   
                           
                    <div class="card-body">
                        <a href="{{path('animal',{'id': animal.id})}}" class="btn btn-outline-success">Fiche de l'animal</a>
                    
                    </div>
                </div>
            </div>
            
           
            
            

    </div>


   {% endfor %}

   
</div>
{% endblock %}
