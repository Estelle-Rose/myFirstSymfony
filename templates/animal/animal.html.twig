{% extends 'base.html.twig' %}

{% block title %}{{animal.nom}}{% endblock %}
{% block pageTitle %}{{animal.nom}}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 840px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code {  padding: 2px 6px; }
    .card {
        border-radius: 5px !important;
    }
    .badge {
        border-radius: 9px !important;
    }
</style>

<div class="example-wrapper">
   
    <div class="card border-success mb-3">
        <div class="row">
            <div class="col-md-4">
                <div class="card-body">
                    <img src="{{ asset('images/animaux/'~animal.image)}}" alt="">
                </div>
                
            </div>
            <div class="col-md-8">
                    <h3 class="card-header">{{animal.nom}}</h3>
                     <div class="card-body">
                        <p class="card-text">{{animal.description}}.</p>
                        <p class="card-text">Poids : {{animal.poids}} kg.</p>
                        <p class="card-text">Dangereux : 
                            {% if (animal.dangereux)%}
                            <span class="badge badge-danger p-2">Oui</span>
                           {% else %}
                               <span class="badge badge-success p-2">Non</span>
                           {% endif %}
                        </p> 
                    </div>          
                   
                </div>
            </div>
            
           
            
            

    </div>




   
</div>
{% endblock %}