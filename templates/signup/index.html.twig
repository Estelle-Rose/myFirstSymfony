{% extends 'base.html.twig' %}
{% block title %}{{page_title}}
{% endblock %}
{% block pageTitle %}{{page_title}}
{% endblock %}


{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 600px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .card, .btn,.form-control {
        border-radius: 5px !important;
    }
    label {
        color: #006666 !important;
    }
    .card {
        background-color: rgb(136, 180, 218) !important;
    }
</style>

<div class="example-wrapper">
    <div class="row">
        <div class="col-12">
            <div class="card p-3">
                {{ form_start(form) }}
                
                    {{ form_row(form.username, {
                        "attr": {'placeholder': 'Ex: John'},
                        "label": "Nom"
                    }) }}
                
                    {{ form_row(form.password, {                        
                        "label": "Mot de passe"
                    }) }}
                    {{ form_row(form.checkedPassword, {
                        "attr": {'placeholder': 'Merci de confirmer votre mot de passe'},
                        "label": "Confirmation du mot de passe"
                    }) }}
                    <input type="submit" class="btn btn-success" value="valider">
                {{ form_end(form) }}
            </div>
        </div>
