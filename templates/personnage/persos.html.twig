{% extends 'base.html.twig' %}

{% block title %}Les personnages
{% endblock %}
{% block pageTitle %}Liste des personnages !
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="container">
		<div class="row">
			{% for player in players %}
			<div class="col-12 col-md-6">
				<div class="card mb-3" style="max-width: 600px;">
					<div class="row g-0">
						<div class="col-md-4">
							<img src="{{ asset('images/personnages/'~player.image)}}" alt=""  class="rounded img-thumbnail img-fluid p-2">

						</div>
						<div class="col-md-8">
							<div class="card-body">
								<div> Pseudo : {{player.pseudo}} </div>
								<div> Age :  {{player.age}} </div>
								<div> Force : {{player.carac.force}} </div>
								<div> Discr√©tion : {{player.carac.discretion}} </div>
								<div> Arme : {{player.carac.arme}} </div>
							</div>
						</div>
					</div>
				</div>
			</div>
				
			{% endfor %}
		</div>


	</div>
{% endblock %}

