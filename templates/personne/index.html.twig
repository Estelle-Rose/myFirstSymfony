{% extends 'base.html.twig' %}

{% block title %}Les personnes
{% endblock %}
{% block pageTitle %}Voici la liste des personnes !
{% endblock %}

{% block body %}
	<style>
		.card {
				border-radius: 5px !important;
			}
            .container {
                margin: 0 auto !important;
                padding: 0 !important;
                max-width: 1140px !important;
            }
	</style>

	<div class="container ">
		<div class="row g-0 mx-auto">
			{% for personne in personnes %}
			<div class="col-12 col-md-10 my-3 mx-auto">
				<div class="card border-success py-3 mx-auto " style="width:100%;">
                    <div class="card-title">
                        <h2 class="display-4 text-center"> <a href="{{path('afficher_personne',{'id': personne.id})}}" class="text-primary">L'animalerie de {{personne.nom|capitalize}} </a> </h2>
                    </div>
                    <div class="card-body ">
                    {% for dispose in personne.disposes %}
                     <div class="card border-success mb-3">
                            <div class="row">
                            <div class="col-4 d-flex align-items-center justify-content-center">
                                <div class="card-body d-flex justify-content-center">
                                <img src="{{ asset('images/animaux/'~dispose.animal.image)}}" alt="" style="width:130px;" />
                                </div>
                            </div>
                            <div class="col-md-8">
                                <h3 class="card-header">
                                    <a href="{{path('animal',{'id': dispose.animal.id})}}" class="text-success">
                                        {{ dispose.animal.nom }}
                                    </a>
                                </h3>
                                <div class="card-body">
                                <p class="card-text">{{ dispose.animal.description }}.</p>
                                <p class="card-text">Poids : {{ dispose.animal.poids }} kg.</p>
                                <p class="card-text">
                                    Dangereux : {% if (dispose.animal.dangereux)%}
                                    <span class="badge badge-pill badge-danger p-2">Oui</span>
                                    {% else %}
                                    <span class="badge badge-pill badge-success p-2">Non</span>
                                    {% endif %}
                                </p>
                                <p class="card-text">
                                    Famille : 
                                    <a
                                    href="{{ path('famille', { id: dispose.animal.famille.id }) }}"
                                    class="btn btn-outline-info"
                                    >{{ dispose.animal.famille.libelle }}.</a
                                    >
                                </p>
                                <p class="card-text">Nombre d'animaux : {{ dispose.nb}}</p>
                           
                                </div>
                            </div>
                            </div>
                        </div>
                     
               
						
                    {% endfor %}
					</div>
                    
                    </div>
			
				</div>
			</div>
				
			{% endfor %}
		</div>


	</div>
{% endblock %}


