{% extends 'base.html.twig' %}

{% block title %}{{personne.nom}}
{% endblock %}
{% block pageTitle %} L'animalerie de {{personne.nom|capitalize}} 
{% endblock %}

{% block body %}
	<style>
		.card,.btn {
				border-radius: 5px !important;
			}
            .container {
                margin: 0 auto !important;
                padding: 0 !important;
                max-width: 1140px !important;
            }
	</style>

	<div class="container ">
		<div class="row g-0 mx-auto">
			
			<div class="col-12 col-md-10 my-3 mx-auto">
		
                    {% for dispose in personne.disposes %}
                <div class="card border-success mb-3">
                            <div class="row">
                            <div class="col-4 d-flex align-items-center justify-content-center">
                                <div class="card-body d-flex justify-content-center">
                                <img src="{{ asset('images/animaux/'~dispose.animal.image)}}" alt="" style="width:100px;" />
                                </div>
                            </div>
                            <div class="col-md-8">
                                <h3 class="card-header">
                                    <a href="{{ path('animal', { id: dispose.animal.id }) }}">
                                        {{ dispose.animal.nom }}
                                    </a>
                                </h3>
                                <div class="card-body">
                                <p class="card-text">Nombre d'animaux : {{ dispose.nb}}</p>
                            
                                <p class="card-text">
                                    Famille : 
                                    <a
                                    href="{{ path('famille', { id: dispose.animal.famille.id }) }}"
                                    class="btn btn-outline-info ml-2"
                                    >{{ dispose.animal.famille.libelle }}.</a
                                    >
                                </p>
                           
                                </div>
                            </div>
                            </div>
                        </div>
                     
               
						
                    {% endfor %}
                </div>
                    
            </div>
			
	
		</div>


	</div>
{% endblock %}


