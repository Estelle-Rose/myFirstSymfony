{% extends 'base.html.twig' %}

{% block title %}{{ controller_name }}{% endblock %}
{% block pageTitle %}{{ controller_name }}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 1140px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
 
 <div class="row">
			{% for continent in continents %}
			<div class="col-12 col-md-6">
				<div class="card border-success p-3 mb-3" style="max-width: 600px;">
                    <div class="card-title">
                       <a href="{{path('continent', {'id': continent.id})}}" class="text-success"><h2> {{continent.libelle|capitalize}} </h2></a> 
                    </div>
                    <div class="card-body pl-0">
                    
						<div class="row">
							{%  for animal in continent.animaux %}
							
							<div class="col-12 col-md-6">
								<div class="card p-1 bg-info my-2">
									<div class="card-image mx-auto">
										<img src="{{asset('images/animaux/'~animal.image)}}" alt="{animal.nom}" style="width:150px;height:150px;" class="img-fluid p-2">
									</div>
									<div class="card-title">
										<h3 class="text-center"> <a href="{{path('animal', {'id': animal.id})}}">{{ animal.nom}}</h3></a>
									</div>
								
								</div>
								
							</div>
							{% endfor %}
					</div>
                    
                    </div>
			
				</div>
			</div>
				
			{% endfor %}

</div>
{% endblock %}
